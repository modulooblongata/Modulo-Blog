<h1 id="page_title">Modulo Oblongata: Blog</h1>

<div id="posts_wrapper" class="skinny_wrapper">
	<% @posts.each do |post| %>
		<div class="post">
			<p class="date"><%= post.created_at.strftime('%B %d, %Y') %></p>
			<h2><%= link_to post.title, post %></h2>
				<p>
  			<% if post.content.length > 250 %>
    			<%= truncate(post.content, length: 250) %>
    			<%= link_to 'Read more &raquo;'.html_safe, post %>
  			<% else %>
    			<%= post.content %>
  			<% end %>
				</p>
			<hr>
		</div>
	<% end %>
	<%= will_paginate @posts %>
	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "New Post", new_post_path(@post) %>
		</div>
	<% end %>
</div>

